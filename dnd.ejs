                <td>11</td>
                <td>14</td>
                <td>14</td>
                <td>18</td>
                <th><button>Remove</button></th>
            </tr>
        </table>
        <br/>
        Player <input type="text"/>
        <br/>
        Hit Points<input type="number"/>
        <br/>
        AC <input type="number"/>
        <br/>
        Initiative<input type="number"/>
        <br/>
        STR<input type="number"/>
        <br/>
        DEX<input type="number"/>
        <br/>
        CON<input type="number"/>
        <br/>
        INT<input type="number"/>
        <br/>
        WIS<input type="number"/>
        <br/>
        CHA<input type="number"/> 
        <br/>
        <button>ADD PLAYER</button>
        <br/>
        <table>
            <h2>Quick Spell Lookup</h2>
            <tr>
                <th> Name </th>
                <th> Casting Time </th>
                <th> Components </th>
                <th> Damage </th>
                <th> Type </th>
                <th> Duration </th>
                <th> Level </th>
                <th> Range </th>
                <th> Save </th>
                <th> Target </th>
                <th></th>
            </tr>
            <tr>
                <td>Fireball</td>
                <td>1 Action</td>
                <td> V S M</td>
                <td> 8d6 </td>
                <td> Fire </td>
                <td> Instant </td>
                <td> 3 </td>
                <td> 150ft </td>
                <td> Dexterity </td>
                <td> 20 foot sphere </td>
                <th><button>Remove</button></th>
            </tr>
            <tr>
                <td>Charm Person</td>
                <td>1 Action</td>
                <td> V S </td>
                <td> None </td>
                <td> </td>
                <td> 1 Hour</td>
                <td> 1 </td>
                <td> 30ft </td>
                <td> Wisom</td>
